<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/background_f2"
              android:paddingBottom="2px"
    >
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_item_my_collection_icon"
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/banner"
           />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_item_my_collection_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.69"
                android:text="高等数学"
                android:textSize="15sp"
                android:textColor="@color/gray_66"

                />
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_item_my_collection_download"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30"
                    android:textColor="@color/gray_99"
                    android:textSize="11sp"
                    android:gravity="center"
                    android:drawableLeft="@drawable/my_collection_xiazai"
                    />
                <TextView
                    android:layout_marginLeft="20dp"
                    android:id="@+id/tv_item_my_collection_zan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30"
                    android:gravity="center"
                    android:textColor="@color/gray_99"
                    android:textSize="11sp"
                    android:drawableLeft="@drawable/my_collection_zan"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="1px"
                   android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/tv_item_my_collection_time"
                    android:textColor="@color/gray_99"
                    android:textSize="11sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017-12-05"
                    />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>