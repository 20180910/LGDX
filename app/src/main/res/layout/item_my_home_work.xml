<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/background_f2"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@color/white"
    android:padding="10dp"
    >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/tv_time_my_home_work_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="毛概"
            android:textSize="15sp"
            android:textColor="@color/gray_66"
            />
        <TextView
            android:id="@+id/tv_time_my_home_work_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11月22日 截止"
            android:textSize="11sp"
            android:textColor="@color/gray_66"
            android:layout_marginTop="3dp"
            />
    </LinearLayout>
    <com.github.customview.MyTextView
        android:id="@+id/tv_time_my_home_work_tijiao"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:text="提交"
        android:textSize="12sp"
        android:padding="5dp"
        android:gravity="center"
        android:textColor="@color/white"
        app:my_tv_solid="@color/theme_color"
        app:my_tv_corner_radius="3dp"
        />
    <com.github.customview.MyTextView
        android:visibility="gone"
        android:id="@+id/tv_time_my_home_work_yitijiao"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:text="已提交"
        android:textSize="12sp"
        android:gravity="center"
        android:textColor="@color/white"
        app:my_tv_solid="@color/gray_d7"
        app:my_tv_corner_radius="3dp"
        />
</LinearLayout>
    <TextView
        android:id="@+id/tv_item_my_home_work_summary"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:text="作业难度还可以，喜欢这门课"
        android:textColor="@color/gray_66"
        android:textSize="15sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        />

    <LinearLayout
        android:id="@+id/ll_item_my_home_work_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        >
        <RelativeLayout
            android:id="@+id/rl_item_my_home_work_img1"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            >
            <ImageView
                android:id="@+id/iv_item_my_home_work_img1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:src="@drawable/banner"
                />
            <TextView
                android:visibility="gone"
                android:padding="5dp"
                android:id="@+id/tv_item_my_home_work_img1"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:gravity="center"
                android:background="@color/home_text_color"
                android:layout_height="match_parent"
                android:text=""
                />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_item_my_home_work_img2"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            >
            <ImageView
                android:id="@+id/iv_item_my_home_work_img2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/banner"
                android:layout_centerInParent="true"
                />
            <TextView
                android:visibility="gone"
                android:padding="5dp"
                android:id="@+id/tv_item_my_home_work_img2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:background="@color/home_text_color"
              />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_item_my_home_work_img3"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            >
            <ImageView
                android:id="@+id/iv_item_my_home_work_img3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:src="@drawable/banner"
                />
            <TextView
                android:visibility="gone"
                android:padding="5dp"
                android:id="@+id/tv_item_my_home_work_img3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:textColor="@color/white"
                android:textSize="12sp"
                android:gravity="center"
                android:background="@color/home_text_color"
                />

        </RelativeLayout>




    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/background_f2"
        />


</LinearLayout>